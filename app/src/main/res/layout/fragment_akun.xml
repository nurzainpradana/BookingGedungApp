<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.cekagenda.CekAgendaActivity">

            <TextView
                android:id="@+id/tv_title"
                style="@style/big_text"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:background="@color/dark_lime"
                android:text="Akun Saya"
                android:textColor="@color/white_lime"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="fulan"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Fulan"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="fulan@gmail.com"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Handphone : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_no_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="081234567890"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_jenis_kelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="081234567890"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat : "
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        style="@style/small_text"/>
                    <TextView
                        android:id="@+id/tv_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Cibitung, Kab. Bekasi"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        style="@style/big_text"/>

                    <LinearLayout
                        android:id="@+id/layout_rekening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail Rekening"
                            android:textColor="@color/orange"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            android:textStyle="bold"
                            style="@style/big_text"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Rekening : "
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            style="@style/small_text"/>
                        <TextView
                            android:id="@+id/tv_no_rekening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="1234567890"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            android:textStyle="bold"
                            style="@style/big_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Bank : "
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            style="@style/small_text"/>
                        <TextView
                            android:id="@+id/tv_nama_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Mandiri"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            android:textStyle="bold"
                            style="@style/big_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Pemilik Rekening : "
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            style="@style/small_text"/>
                        <TextView
                            android:id="@+id/tv_nama_pemilik_rekening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Fulan"
                            android:layout_marginStart="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_12dp"
                            android:textStyle="bold"
                            style="@style/big_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_log_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/lime"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_12dp"
                            android:text="@string/log_out" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_update_akun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/orange"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_12dp"
                            android:text="@string/update" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</layout>